{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "emitDeclarationOnly": false, // Allow emitting JS and declarations together
    "outDir": "dist", 
    "declarationDir": "dist/types",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true, // Include source maps for easier debugging
    "lib": ["DOM", "ESNext"] // Ensure DOM and ESNext libraries are included
  },
  "include": ["src"]
}
